@using VisReg.Cmn.Namings
@model VisReg.Web.ViewModels.UserLoginViewModel

@{ ViewBag.Title = NamingStrings.TitleAppShortName; }

<div class="container">
    <div class="jumbotron" style="padding-top:1px; padding-bottom:1px">
        <div class="col-md-2 form-control-static">
            <img src="~/Content/Images/Visitors.png" class="img-responsive" />
        </div>
        <h2>ΜΗΤΡΩΟ ΕΠΙΣΚΕΠΤΩΝ Κ.Υ. @NamingStrings.TitleMinistryNameShortName</h2>
        <br />
        <p class="text-info">Εφαρμογή για την ηλεκτρονική καταχώριση στοιχείων επισκεπτών στην Κ.Υ. του Υπουργείου Παιδείας & Θρησκευμάτων</p>
    </div>

    <div class="row">
        <div class="panel panel-primary text-center" id="divLogin">
            <div class="panel-heading">
                <h4><strong>ΕΙΣΟΔΟΣ ΣΤΟ ΣΥΣΤΗΜΑ <br> ΜΗΤΡΩΟ ΕΠΙΣΚΕΠΤΩΝ Κ.Υ.</strong> </h4>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    if (@Model.Message != "")
                    {
                        <div class="alert alert-danger well-sm" role="alert">
                            <h5>@Model.Message</h5>
                        </div>
                    }

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-offset-1 col-md-6">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-offset-1 col-md-6">
                            @Html.PasswordFor(m => m.UserPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-4">
                            <button type="submit" class="btn btn-success btn-lg" id="btnLogin">
                                <span class="glyphicon glyphicon-log-in"></span><strong> @NamingStrings.BtnLogin </strong>
                            </button>
                        </div>
                    </div>

                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="col-md-10">
                            <p class="text-left">
                                <em>Τεχνική Υποστρήριξη: 210-3443049</em>
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        // Εμφάνιση Notification.
        if ('@ViewBag.MsgForNotification' != '') {
            var msg = "@ViewBag.MsgForNotification";
            toastr.info(msg);
        }
    });
</script>